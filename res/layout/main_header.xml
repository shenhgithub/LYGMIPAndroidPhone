<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title" >

    <RelativeLayout
        android:id="@+id/main_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/main_left_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           
            android:clickable="true" >
<!--  android:background="@drawable/selector_title" -->
            <ImageView
                android:id="@+id/main_left_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_set_button" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/main_left_rl"
            android:background="@drawable/title_line" 
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/header_title"
        style="@style/main_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="用户名" />

    <RelativeLayout
        android:id="@+id/main_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip">

        <ImageView
            android:id="@+id/main_right_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_line" 
             android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/main_right_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/main_right_cut"
            
            android:clickable="true" >
<!-- android:background="@drawable/selector_title"  -->
            <ImageView
                android:id="@+id/main_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_cancelation_button" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>