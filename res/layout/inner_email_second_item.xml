<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 内部邮件二级列表子项 -->

    <RelativeLayout
        android:id="@+id/file_doc_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="@drawable/floor" >

        <ImageView
            android:id="@+id/file_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:contentDescription="@null"
            android:src="@drawable/message_1" />

        <ImageView
            android:id="@+id/file_item_new_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/file_item_icon"
            android:layout_alignTop="@id/file_item_icon"
            android:layout_marginLeft="-6dip"
            android:layout_marginTop="0dip"
            android:background="@drawable/icon_nr_2"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_toLeftOf="@+id/im_select"
            android:layout_toRightOf="@+id/file_item_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/files_item_name"
                style="@style/filebrary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="aaaa" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/sendpeople"
                    style="@style/inneremail_title_tiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="发件人：" />
                
                <TextView
                    android:id="@+id/files_item_people"
                    style="@style/inneremail_title_tiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@id/sendpeople"
                    android:text="bbb" />

                <TextView
                    android:id="@+id/files_item_time"
                    style="@style/inneremail_title_tiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="cccc" />
                
                
            </RelativeLayout>
        </LinearLayout>
        
        

        <ImageView
            android:id="@+id/im_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:contentDescription="@null"
            android:src="@drawable/icon_s"
            android:visibility="invisible" />
        
        
        <ImageView
            android:id="@+id/attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/im_select"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:contentDescription="@null"
            android:src="@drawable/annex"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>