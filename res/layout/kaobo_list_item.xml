<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#d1d2d2" >
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="12" >

            <TextView
                android:id="@+id/ship_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#d1d2d2" >
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="12" >

            <TextView
                android:id="@+id/arrive_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#d1d2d2" >
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="7" >

            <TextView
                android:id="@+id/ship_represent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#d1d2d2" >
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="7" >

            <TextView
                android:id="@+id/bring_water"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#d1d2d2" >
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="7" >

            <TextView
                android:id="@+id/ship_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#d1d2d2" >
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/detail_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="明 细" 
                android:background="@drawable/ship_button_1"
                android:textColor="@color/white"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"/>

            <Button
                android:id="@+id/deal_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="处 理" 
                android:background="@drawable/ship_button_1"
                android:textColor="@color/white"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#d1d2d2" >
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/line_one"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#d1d2d2" >
    </RelativeLayout>

</LinearLayout>