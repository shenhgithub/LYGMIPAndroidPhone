<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_floor"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/select_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/choose_box"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/file_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/select_iv"
        android:background="@drawable/pdf"
        android:contentDescription="@null" />

    <RelativeLayout
        android:id="@+id/fileinfo_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/file_icon" >

        <TextView
            android:id="@+id/filetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于开展2013年.."
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/filesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/filetitle"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="12sp" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/filedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/filetitle"
            android:layout_toRightOf="@id/filesize"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="12sp" 
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>