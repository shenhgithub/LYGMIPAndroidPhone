<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_title_bg" >

        <TextView
            android:id="@+id/titletv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="标题"
            android:textColor="#0064a4"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/header_rl"
        android:layout_alignRight="@+id/header_rl"
        android:layout_below="@id/header_rl"
        android:background="@drawable/box_body_bg1" >


        <ListView
            android:id="@+id/bowei_listview"
            android:layout_width="fill_parent"
            android:layout_height="300dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_below="@id/number_block"
            android:divider="@null"
            android:listSelector="@color/transparent" >
        </ListView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="10dip"
            android:layout_below="@id/bowei_listview" >
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>