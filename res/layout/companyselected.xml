<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
        <ImageView
        android:id="@+id/address_select_icon"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/pop_r"
        android:minHeight="40dip"
        android:contentDescription="@null"/>
        
        <RelativeLayout 
            android:id="@+id/contact_person_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/address_select_icon"
            android:layout_centerVertical="true">
             <TextView
            android:id="@+id/address_select_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张菲"
            android:gravity="center"
            android:textSize="14sp" 
            android:textColor="@color/black"/>
             
               <TextView
            android:id="@+id/address_select_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_select_name_text"
            android:layout_marginTop="1dp"
            android:text="市民卡公司"
            android:gravity="center"
            android:textSize="12sp" 
            android:textColor="@color/gray"/>
        </RelativeLayout>
       
    	
       <ImageView
        android:id="@+id/address_select_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/error"
        android:contentDescription="@null"/>
    

</RelativeLayout>